export BADEV="$HOME/bradford-abbas.uk"

echo "updateLiveCode - Code and Config to Live site"
alias updateLiveCode="sh $BADEV/scripts/badev/updateLiveCode.sh"

# Production to Development
echo "rsyncp2dfiles  - Get latest files from live site"
alias rsyncp2dfiles="sh $BADEV/scripts/badev/rsyncProd2DevFiles.sh"
# alias syncp2ddb="sh $BADEV/scripts/badev/syncProd2DevDB.sh"

# Development change directory
alias cdc="cd $BADEV/"
alias cdd="cd $BADEV/web/"
alias cdl="cd $BADEV/web/libraries"
alias cdm="cd $BADEV/web/modules/contrib/"
alias cdt="cd $BADEV/web/themes/contrib/pellucid_monoset"
alias cdsite="cd $BADEV/web/sites/default/"
alias cdfiles="cd $BADEV/web/sites/default/files"

# Dumps: SQL
echo "sqldumpLive    - Get latest SQL from live site"
# alias sqldumpDev="sh $BADEV/scripts/badev/sqldumpDev.sh"
alias sqldumpLive="sh $BADEV/scripts/badev/sqldumpLive.sh"
